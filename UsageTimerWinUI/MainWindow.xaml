<Window
    x:Class="UsageTimerWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UsageTimerWinUI"
    xmlns:views="using:UsageTimerWinUI.Views">

    <Grid>
        <Grid.RowDefinitions>
            <!-- draggable titlebar row -->
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Draggable area: keep this as a simple non-interactive container -->
        <Grid x:Name="AppTitleBar" Grid.Row="0" Background="Transparent">
            <TextBlock Text="PC Usage Timer" VerticalAlignment="Center" Margin="12,0" FontWeight="SemiBold"/>
            <!-- If you need controls here (e.g. custom buttons), make sure they do NOT cover the draggable region
                 or set IsHitTestVisible=\"False\" on non-interactive parts. -->
        </Grid>

        <!-- Main content (NavigationView etc.) goes below the titlebar -->
        <NavigationView x:Name="Nav" Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsTitleBarAutoPaddingEnabled="False"
                        PaneDisplayMode="Left">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Overview" Tag="overview"/>
                <NavigationViewItem Content="App Usage" Tag="apps"/>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</Window>
